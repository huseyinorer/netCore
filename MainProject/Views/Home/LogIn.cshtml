@model MainProject.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "LogIn";
}
<div class="row">    
    <hr />
    <div class="col-md-3 offset-md-6 mx-5">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="text" class="form-control" asp-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" class="form-control" asp-for="Password" />
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="RememberMe" /> Beni Hatırla
            </div>
            <div class="form-group">
                <input type="submit" value="Giriş" class="btn btn-primary" />
            </div>
            <a class="btn btn-link" asp-action="ForgotPassword">Şifremi Unuttum</a>
        </form>
        <a class="btn btn-outline-info btn-block" asp-action="FacebookLogin">Facebook ile Giriş Yap</a>
        <a class="btn btn-outline-danger btn-block" asp-action="GoogleLogin">Google ile Giriş Yap</a>
    </div>
</div>