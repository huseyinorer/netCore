
@{
    ViewData["Title"] = "ForgotPassword";
}

<h3>Şifremi Unuttum</h3>
<div class="col-md-4 offset-md-3">
    <div class="alert alert-info">
        Kayıtlı olduğunuz email adresinize gelen link ile şifrenizi sıfırlayabilirsiniz.
    </div>
    <form asp-controller="Home" asp-action="ForgotPassword" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <input class="form-control" type="email" name="email" id="email" placeholder="Email" /><br />
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Submit" />
        </div>
    </form>
</div>