@model List<AppIdentityUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h3>Users</h3>

<hr />
<table class="table table-bordered table-striped ">
    <tr>
        <td>User Id</td>
        <td>User name</td>
        <td>Email</td>
        <td>Roller</td>
        <td>Rol Atama</td>

    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Hiç üye yok!</td>
        </tr>

    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td user-roles="@item.Id"></td>
                <td><a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">Yetkilendir</a></td>
            </tr>
        }
    }
</table>