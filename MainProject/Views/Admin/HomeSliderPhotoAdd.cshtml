@model MainProject.ViewModels.HomeSliderPhotoViewModel

@{
    ViewData["Title"] = "Add Photo";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HomeSliderPhotoAdd</title>
</head>
<body>

    <h4>HomeSliderPhotoViewModel</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="HomeSliderPhotoAdd" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Photo" class="control-label"></label>
                    <input type="file" id="files" asp-for="Photo" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhotoTitle" class="control-label"></label>
                    <input asp-for="PhotoTitle" class="form-control" />
                    <span asp-validation-for="PhotoTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ekle" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="HomePagePhotos">Back to List</a>
    </div>

</body>
</html>
